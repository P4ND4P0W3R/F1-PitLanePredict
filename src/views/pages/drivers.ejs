<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head'); %>
    <title>Drivers</title>
    <style>
        .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        }
    </style>
</head>

<body class="container">
    <header>
        <%- include ('../partials/header'); %>
    </header>
    
    <div class="content">
        <h1>Drivers</h1>

        <ul>
            <% drivers.forEach(driver => { %>
                <li>
                    <a href="/drivers/<%= driver.driver_id || '' %>">
                    <%= driver.driver_name || 'Unknown Driver' %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>


    <footer>
        <%- include ('../partials/footer'); %>
    </footer>
</body>

</html>